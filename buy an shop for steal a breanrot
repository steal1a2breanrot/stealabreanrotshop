  <script>
    // ====== CONFIG: edit these values to match your account ======
    const CONFIG = {
      robloxHandle: "@Bbbbbbbnnnnnnng", // displayed handle
      robloxProfileUrl: "https://www.roblox.com/users/YOUR_USER_ID/profile", // replace YOUR_USER_ID
      robloxGroupUrl: "https://www.roblox.com/groups/YOUR_GROUP_ID/STEAL-A-BREANROT", // replace YOUR_GROUP_ID
      playNowUrl: "#", // link to your game's place URL
      highlightsUrl: "#", // link to Youtube/TikTok highlights
      supportUrl: "#", // link to donate / support (optional)
      eventDateISO: (function(){
        // default next event: next Saturday 18:00 UTC from now
        const now = new Date();
        const day = now.getUTCDay();
        const daysUntilSat = (6 - day + 7) % 7 || 7;
        const nextSat = new Date(Date.UTC(now.getUTCFullYear(), now.getUTCMonth(), now.getUTCDate() + daysUntilSat, 18, 0, 0));
        return nextSat.toISOString();
      })()
    };

    // Wire up UI with config
    document.getElementById('roblox-handle').textContent = CONFIG.robloxHandle;
    document.getElementById('roblox-profile').href = CONFIG.robloxProfileUrl;
    document.getElementById('roblox-group').href = CONFIG.robloxGroupUrl;
    document.getElementById('play-now').href = CONFIG.playNowUrl;
    document.getElementById('watch-highlights').href = CONFIG.highlightsUrl;
    document.getElementById('support').href = CONFIG.supportUrl;
    document.getElementById('follow-btn').href = CONFIG.robloxProfileUrl;
    document.getElementById('join-event').addEventListener('click', () => {
      // scroll to RSVP
      document.getElementById('player-name').focus();
      flashElement(document.getElementById('player-name'));
    });

    // Copy party link
    document.getElementById('share-link').addEventListener('click', async () => {
      const link = location.href;
      try {
        await navigator.clipboard.writeText(link);
        showToast('Party link copied to clipboard!');
      } catch (e) {
        prompt('Copy this link:', link);
      }
    });

    // RSVP button (local demo; not saving)
    document.getElementById('rsvp-btn').addEventListener('click', () => {
      const name = document.getElementById('player-name').value.trim();
      if(!name){ showToast('Enter your Roblox username to RSVP'); return; }
      showToast(`RSVP received for ${name} — be online at event time!`);
      document.getElementById('player-name').value = '';
    });

    // Countdown timer
    const target = new Date(CONFIG.eventDateISO);
    function updateCountdown(){
      const now = new Date();
      let diff = Math.max(0, target - now);
      const days = Math.floor(diff / (24*60*60*1000));
      diff -= days * 24*60*60*1000;
      const hours = Math.floor(diff / (60*60*1000));
      diff -= hours * 60*60*1000;
      const mins = Math.floor(diff / (60*1000));
      diff -= mins * 60*1000;
      const secs = Math.floor(diff / 1000);

      document.getElementById('cd-days').firstChild && (document.getElementById('cd-days').firstChild.textContent = days);
      document.getElementById('cd-hours').firstChild && (document.getElementById('cd-hours').firstChild.textContent = hours);
      document.getElementById('cd-mins').firstChild && (document.getElementById('cd-mins').firstChild.textContent = mins);
      document.getElementById('cd-secs').firstChild && (document.getElementById('cd-secs').firstChild.textContent = secs);

      // alternatively set innerText (works cross-browser)
      document.getElementById('cd-days').childNodes[0].nodeValue = days;
      document.getElementById('cd-hours').childNodes[0].nodeValue = hours;
      document.getElementById('cd-mins').childNodes[0].nodeValue = mins;
      document.getElementById('cd-secs').childNodes[0].nodeValue = secs;
    }
    updateCountdown();
    setInterval(updateCountdown, 1000);

    // small UI helpers
    function showToast(msg){
      const t = document.createElement('div');
      t.textContent = msg;
      Object.assign(t.style, {
        position:'fixed', right:'20px', bottom:'20px', padding:'10px 14px',
        background:'linear-gradient(90deg,#333,#111)', color:'#fff', borderRadius:'10px',
        boxShadow:'0 8px 30px rgba(0,0,0,0.6)', zIndex:9999, fontSize:'14px'
      });
      document.body.appendChild(t);
      setTimeout(()=> t.style.opacity = '0.01', 1600);
      setTimeout(()=> t.remove(), 2200);
    }
    function flashElement(el){
      const orig = el.style.boxShadow;
      el.style.boxShadow = '0 0 0 4px rgba(124,92,255,0.18)';
      setTimeout(()=> el.style.boxShadow = orig, 800);
    }

    // Event guide modal (simple)
    document.getElementById('open-guide').addEventListener('click', () => {
      const content = [
        "1) Follow the host on Roblox.",
        "2) Join the group before event time.",
        "3) Be online at the event — invites will be sent to followers first.",
        "4) Winners receive VIP ranks or in-game currency.",
        "",
        "Tip: use the copy link button to invite friends!"
      ].join('\\n');
      alert(content);
    });

    // Quick accessibility: ensure countdown uses text nodes we can set
    // (no action needed; done above)
  </script>
</body>
